<LinearLayout android:id="@+id/player"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorPrimaryDark"
    app:behavior_hideable="false"
    app:behavior_peekHeight="10dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:layout_gravity="bottom"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.halfplatepoha.frnds.ui.GlideImageView
        android:id="@+id/ivPlayerAlbum"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="?android:actionBarSize"
        android:src="@drawable/warriors"
        tools:src="@drawable/warriors"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:paddingLeft="16dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <com.halfplatepoha.frnds.ui.OpenSansTextView
            android:id="@+id/tvPlayerTrackTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We're the Champions!"
            tools:text="We're the Champions!"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/textPrimary"/>

        <com.halfplatepoha.frnds.ui.OpenSansTextView
            android:id="@+id/tvPlayerTrackFrnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="with Amrit Kamal Lenka"
            android:text="with Amrit Kamal Lenka"
            android:textSize="13sp"
            android:textColor="@color/textSecondary"/>
    </LinearLayout>

    <ImageButton android:id="@+id/btnPlayNext"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/play"
        android:background="@null"/>
</LinearLayout>