<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="3dp"
    android:orientation="horizontal">

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_weight="8"
        android:gravity="right"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/me_bubble"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp">

            <ImageButton
                android:id="@+id/btnPlayPause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/play_icon"
                android:background="@null"/>

            <com.halfplatepoha.frnds.ui.OpenSansTextView
                android:id="@+id/tvMeMsg"
                style="@style/styleMeChatMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                tools:text="hello there whats up ?" />
        </LinearLayout>

        <!--<com.halfplatepoha.frnds.ui.OpenSansTextView-->
        <!--android:id="@+id/tvMeTimeStamp"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="end"-->
        <!--android:layout_marginTop="3dp"-->
        <!--android:text="10:00 AM"-->
        <!--android:textColor="#b9b8b8"-->
        <!--android:textSize="12sp" />-->

    </LinearLayout>

    <!--<de.hdodenhof.circleimageview.CircleImageView-->
    <!--android:id="@+id/ivMeAvatar"-->
    <!--android:layout_width="24dp"-->
    <!--android:layout_height="24dp"-->
    <!--android:gravity="center"-->
    <!--android:src="@drawable/me" />-->

    <com.halfplatepoha.frnds.ui.OpenSansButton
        android:id="@+id/btnRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:drawablePadding="5dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="Tap to Retry"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:visibility="gone" />

</LinearLayout>