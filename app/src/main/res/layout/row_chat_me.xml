<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="8dp"
    android:orientation="horizontal">

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_weight="8"
        android:gravity="right"
        android:orientation="vertical">

        <com.halfplatepoha.frnds.ui.OpenSansTextView
            android:id="@+id/tvMeMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/me_bubble"
            android:gravity="left"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:textSize="12sp"
            android:textColor="@color/textMe"
            tools:text="hello there whats up ?" />

        <com.halfplatepoha.frnds.ui.OpenSansButton
            android:id="@+id/btnRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:drawablePadding="5dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Tap to Retry"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:visibility="gone" />

        <com.halfplatepoha.frnds.ui.OpenSansTextView
            android:id="@+id/tvMeTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="3dp"
            android:text="10:00 AM"
            android:textColor="#b9b8b8"
            android:textSize="12sp" />

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivMeAvatar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:gravity="center"
        android:src="@drawable/me" />

</LinearLayout>