<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <com.halfplatepoha.frnds.ui.GlideImageView
        android:id="@+id/ivResultIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        tools:src="@drawable/warriors"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp">

        <com.halfplatepoha.frnds.ui.OpenSansTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            tools:text="Sample song name with a very long name so that it ellipsizes"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textColor="@color/textPrimary"/>

        <com.halfplatepoha.frnds.ui.OpenSansTextView
            android:id="@+id/tvAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Sample author name"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/textSecondary"
            android:textSize="13sp"/>

    </LinearLayout>

</LinearLayout>