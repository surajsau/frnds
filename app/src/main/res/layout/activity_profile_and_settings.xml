<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="?android:actionBarSize"
            android:layout_height="?android:actionBarSize"
            android:src="@drawable/arrow_back_icon"
            android:background="@null"/>

        <com.halfplatepoha.frnds.ui.OpenSansTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/textPrimary"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:transitionName="@string/frnd_name_transition"/>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivUserImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        tools:src="@drawable/warriors"
        app:civ_border_color="@color/colorPrimaryLight"
        app:civ_border_width="2dp"/>

    <com.halfplatepoha.frnds.ui.OpenSansTextView
        android:id="@+id/tvUserName"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        tools:text="Imagine Dragons"
        android:textSize="15sp"
        android:textColor="@color/colorPrimaryLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="20dp"/>

    <com.halfplatepoha.frnds.ui.OpenSansButton
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/com_facebook_blue"
        android:text="Logout"
        android:textAllCaps="false"
        android:textSize="15sp"/>

    <com.halfplatepoha.frnds.ui.OpenSansButton
        android:id="@+id/btnAppIntro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="App Intro"
        android:textAllCaps="false"
        android:textSize="15sp"/>

    <com.halfplatepoha.frnds.ui.OpenSansTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="Keep syncin'"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:textSize="13sp"
        android:textColor="@color/textSecondary"/>

    <com.halfplatepoha.frnds.ui.OpenSansTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_gravity="center_horizontal"
        android:text="v1.0"
        android:textAllCaps="false"
        android:textSize="13sp"
        android:textColor="@color/textSecondary"/>

</LinearLayout>